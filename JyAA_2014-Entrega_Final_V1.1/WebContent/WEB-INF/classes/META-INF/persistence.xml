<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="jyaa_2014">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.CEDICA.model.Usuario</class>
		<class>com.CEDICA.model.Rol</class>
		<class>com.CEDICA.model.Alumno</class>
		<class>com.CEDICA.model.Familiar</class>
		<class>com.CEDICA.model.Institucion</class>
		<class>com.CEDICA.model.Solicitud</class>
				
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
<!-- 			<property name="hibernate.connection.username" value="jyaa2014_grupo8" /> -->
<!-- 			<property name="hibernate.connection.password" value="jyaa2014_grupo8"/> -->
<!-- 			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/jyaa2014_grupo8"/>		 -->
			<property name="hibernate.connection.username" value="root" /> 
			<property name="hibernate.connection.password" value=""/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost/cedica"/>			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/> 
		</properties>
	</persistence-unit>
</persistence>