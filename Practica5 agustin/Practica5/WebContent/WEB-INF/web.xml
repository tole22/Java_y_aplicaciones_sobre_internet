<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Practica5</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
	<param-name>stock</param-name>
	<param-value>/WEB-INF/recursos/stock.txt</param-value>
  </context-param>
  
  <listener>
    <listener-class>listeners.InicializaStock</listener-class>
  </listener>
   <listener>
    <listener-class>listeners.InicializaUsuarios</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>saludo</servlet-name>
    <jsp-file>/jsp_pages/saludo.jsp</jsp-file>
    <init-param>
      <param-name>AM</param-name>
      <param-value>Buen DÃ­a!</param-value>
    </init-param>
    <init-param>
      <param-name>PM</param-name>
      <param-value>Buenas Tardes!</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>saludo</servlet-name>
    <url-pattern>/jsp_pages/saludo.jsp</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>LoginUser</servlet-name>
    <servlet-class>servlets.LoginUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TerminarSesion</servlet-name>
    <servlet-class>servlets.TerminarSesion</servlet-class>
  </servlet>  
   
  <servlet-mapping>
    <servlet-name>LoginUser</servlet-name>
    <url-pattern>/LoginUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TerminarSesion</servlet-name>
    <url-pattern>/TerminarSesion</url-pattern>
  </servlet-mapping>
 
  
  
</web-app>